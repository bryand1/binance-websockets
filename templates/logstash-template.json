{
  "template" : "logstash-*",
  "settings" : {
    "number_of_shards": 1,
    "number_of_replicas": 0,
    "refresh_interval": "10s"
  },
  "aliases" : { },
  "mappings" : {
    "doc": {
      "dynamic_templates" : [
        {
          "dates" : {
            "match_mapping_type" : "date",
            "mapping" : {
              "format" : "date_optional_time",
              "doc_values" : true,
              "type" : "date"
            }
          }
        },
        { 
          "doubles" : {
            "match_mapping_type" : "double",
            "mapping" : {
              "doc_values" : true,
              "type" : "double"
            }
          }
        },
        {
          "longs" : {
            "match_mapping_type" : "long",
            "mapping" : {
              "doc_values" : true,
              "type" : "long"
            }
          }
        },
        {
          "strings" : {
            "match_mapping_type": "string",
            "mapping": {
              "type": "text",
              "fields": {
                "raw": {
                  "type":  "keyword",
                  "ignore_above": 256
                }
              }
            }
          }
        }
      ],
      "properties" : {
        "@version" : {
          "index" : false,
          "type" : "text"
        },
        "host": {"type": "ip"},
        "stream": {"type": "keyword"},
        "message": {"type": "text"},
        "logger": {"type": "keyword"},
        "loglevel": {"type": "keyword"},
        "msg": {"type": "text"}
      }
    }
  }
}